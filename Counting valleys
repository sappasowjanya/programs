// Complete the countingValleys function below.
int countingValleys(int n, char* s) {

    int i,c=0,v=0;
    for(i=0;i<n;i++)
    {
        if(s[i]=='U')
        {
            c++;
        }
        else
        {
            c--;
        }
    if(c==0&&s[i]=='U')
        v++;
    }
    return v;

}
