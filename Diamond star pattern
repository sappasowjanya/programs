#include <stdio.h>
 
int main(void) {
	// your code goes here
    int r;
   scanf("%d",&r);
   for(int i=0;i<r;i++)
   {
     if(i<=r/2)
      {
          for(int k=r/2;k>i;k--)
           {
             printf(" ");
           }
         for(int j=0;j<=i*2;j++)
          {
            printf("*");
          }
     printf("\n");
      }
     else
      {
          for(int k=r/2;k<i;k++)
           {
             printf(" ");
           }
          for(int j=0;j<((r-i)*2)-1;j++)
           {
            printf("*");
           }
         printf("\n");
     }
 
     }
	return 0;
}
