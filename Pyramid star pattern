#include <stdio.h>
 
int main(void) {
	// your code goes here
    int n;
   scanf("%d",&n);
   int i,j,k;
   for(i=0;i<n;i++)
     {
        for(j=n;j>i+1;j--) 
        {
         printf(" ");
        }
       for(k=0;k<=i*2;k++)
       {
         printf("*");
       }
      printf("\n");
    }
	return 0;
}
