/*      A 
      C C C 
    E E E E E 
  G G G G G G G 
*/
#include<stdio.h>
int main(int argc, char *a[])
{
	//Write code here
	int n;
	char ch='A';
	scanf("%d",&n);
	int i,j,k;
	for(i=0;i<n;i++)
    {
       for(j=n-1;j>i;j--)
       {
           printf(" ");
       }
       for(k=1;k<=2*(i+1)-1;k++)
       {
           printf("%c ",ch);
       }
       printf("\n");
       ch=ch+2;
    }
}
