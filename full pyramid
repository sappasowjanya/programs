#include <stdio.h>
 
int main(void) {
	// your code goes here
     int n;
    scanf("%d",&n);
     int i,j,k;
    for(i=1;i<=n;i++)
    {
      for(j=1;j<=n-i;j++)
       {
         printf(" ");
       }
       k=0;
      while(k<2*i-1)
      {
          printf("*");
           ++k;
      }
     printf("\n");
   }
	return 0;
}
