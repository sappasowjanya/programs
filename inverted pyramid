    #include <stdio.h>

int main(void) {
	// your code goes here
     int n;
    scanf("%d",&n);
    int i,j,k;
    for(i=n;i>=1;i--)
     {
       for(j=n-i;j>=1;j--)
        {
          printf(" ");
        }
        k=0;
       while(k!=2*i-1)
       {
         printf("*");
        ++k;
       }
     printf("\n");
   }
            
 	return 0;
}
